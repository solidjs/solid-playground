{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "noEmit": true,
    "newLine": "lf",
    "sourceMap": true,
    "skipLibCheck": true,
    "jsxImportSource": "solid-js",
    "types": ["vite/client"]
  },
  "include": ["./src"],
  "exclude": ["node_modules/"]
}
